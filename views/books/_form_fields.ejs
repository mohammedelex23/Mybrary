<div class="form-row">
    <div class="form-item">
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= book.title %>" />
    </div>
    <div class="form-item">
        <label for="author">Author</label>
        <select name="author">
            <% authors.forEach(author => { %>
            <% if(author.id === book.author) { %>
            <option label="<%= author.name %>" selected value="<%= author.id %>"></option>
            <% } else { %>
            <option label="<%= author.name %>" value="<%= author.id %>"></option>
            <% } %>
            <% }) %>
        </select>
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label for="publishDate">Publish Date</label>
        <input type="date" name="publishDate" value="<%= book.publishDate == null ? '' :
            book.publishDate.toISOString().split('T')[0] %>" />
    </div>
    <div class="form-item">
        <label for="pageCount">Page Count</label>
        <input type="number" min="1" name="pageCount" value="<%= book.pageCount %>" />
    </div>
</div>

<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label for="cover">Cover</label>
        <input type="file" class="filepond book-cover" name="cover" />
    </div>
    <div class="form-item">
        <label for="description">Description</label>
        <textarea name="description" rows="5"><%= book.description %></textarea>
    </div>
</div>